<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_corners_bg"
    android:layout_marginBottom="@dimen/space_between_contacts_bottom">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/contact_icon_size"
        android:layout_height="@dimen/contact_icon_size"
        android:layout_margin="@dimen/defaultLayoutSpace"
        android:src="@drawable/default_contact_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultLayoutSpace"
        android:textColor="@color/purple_700"
        android:text="@string/contact_name"
        android:textSize="@dimen/contact_name_text_size"
        app:layout_constraintTop_toTopOf="@id/contact_icon"
        app:layout_constraintStart_toEndOf="@id/contact_icon"/>


    <TextView
        android:id="@+id/contact_career_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_name"
        app:layout_constraintStart_toStartOf="@id/contact_name"
        android:text="@string/career"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/contact_career_text_size" />


    <ImageButton
        android:id="@+id/trash_image_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/trash_icon_size"
        android:layout_height="@dimen/trash_icon_size"
        android:scaleType="centerCrop"
        android:src="@drawable/trash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

